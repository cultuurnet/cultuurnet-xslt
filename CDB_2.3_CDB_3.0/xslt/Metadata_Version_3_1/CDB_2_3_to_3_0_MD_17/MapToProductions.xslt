<?xml version="1.0" encoding="ISO-8859-1"?><xsl:stylesheet version="1.0" xmlns="http://www.cultuurdatabank.com/XMLSchema/CdbXSD/3.1/DRAFT" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:md="http://www.cultuurdatabank.be/XMLSchema/metadata" xmlns:xalan="http://xml.apache.org/xalan" exclude-result-prefixes="md xsl xalan">	<xsl:output method="xml" version="1.0" encoding="ISO-8859-1" indent="no"/>	<xsl:template name="insertProductions">		<xsl:variable name="prods">			<xsl:for-each select="//event_cluster_instance[event_cluster_type='productie']">				<xsl:value-of select="1"/>			</xsl:for-each>		</xsl:variable>		<xsl:if test="$prods &gt; 0">			<productions>				<xsl:for-each select="//event_cluster_instance[event_cluster_type='productie']">					<production>						<xsl:attribute name="cdbid"><xsl:value-of select="md:objectid"/></xsl:attribute>						<xsl:choose>									<xsl:when test="string(md:external_identifier) != ''">										<xsl:attribute name="externalid"><xsl:value-of select="md:external_identifier"/></xsl:attribute>									</xsl:when>									<xsl:otherwise>										<xsl:attribute name="externalid"><xsl:value-of select="concat('CDB:',md:objectid)"/></xsl:attribute>									</xsl:otherwise>								</xsl:choose>								<!-- external id mandatory 2/09/08 						<xsl:if test="md:external_identifier != ''">							<xsl:attribute name="externalid"><xsl:value-of select="md:external_identifier"/></xsl:attribute>						</xsl:if>-->						<productioncategories>						<xsl:call-template name="insertCategorisation"/>						</productioncategories>						<productiondetails>							<productiondetail>								<xsl:attribute name="lang"><xsl:value-of select="'nl'"/></xsl:attribute>																<shortdescription>									<xsl:choose>										<xsl:when test="string(md:short_description/dutch) != ''">											<xsl:value-of select="md:short_description/dutch"/>										</xsl:when>										<xsl:otherwise>											<xsl:value-of select="'NB'"/>										</xsl:otherwise>									</xsl:choose>								</shortdescription>								<title>									<xsl:value-of select="md:label/dutch"/>								</title>							</productiondetail>						</productiondetails>					</production>				</xsl:for-each>			</productions>		</xsl:if>	</xsl:template></xsl:stylesheet>